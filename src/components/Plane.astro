
---
const { image, text, link } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="plate">
    <div class="plate-inner">
      <div class="plate-front">
        <Image src={image} alt="Plate Image">
      </div>
      
        <div class="plate-back">
          <a href={link}>
            <p>{text}</p>
          </a>
        </div>
    </div>
  </div>

<style>
    .plate {
  width: 150px;
  height: 150px;
  perspective: 1000px;


  .plate-inner {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s;
    cursor: pointer;

    &:hover {
      transform: rotateY(180deg);
    }
  }

  .plate-front,
  .plate-back {
    width: 100%;
    height: 100%;
    position: absolute;
    backface-visibility: hidden;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .plate-front {
    background-color: white;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 50%;
    }
  }

  .plate-back {
    background-color: #2c3e50;
    color: white;
    font-size: 1rem;
    text-align: center;
    transform: rotateY(180deg);
    a {
      width: 100%;
      height: 100%;
      text-decoration: none;
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
}
</style>